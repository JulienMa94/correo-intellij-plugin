<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.julienma94.intellijplugintest</id>
    <name>intellij-plugin-test Template</name>
    <vendor>julienma94</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.julienma94.intellijplugintest.toolWindow.MyToolWindowFactory" icon="/icons/pluginIcon.svg" id="Correo"/>

        <applicationService
                serviceInterface="com.github.julienma94.intellijplugintest.services.MainService"
                serviceImplementation="com.github.julienma94.intellijplugintest.services.MainServiceImpl"
                id="Correo"
        />
    </extensions>

    <applicationListeners>
        <listener class="com.github.julienma94.intellijplugintest.listeners.MyApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
</idea-plugin>
